<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#1e88cf"
                android:endColor="#1e88cf"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#e6e6e6" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#1e88cf"
                android:startColor="#1e88cf"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#e6e6e6" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#3498db"
                android:startColor="#3498db"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#e6e6e6" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>

